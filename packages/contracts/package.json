{
  "name": "discord-attestation-contracts",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deployDiscord.ts --network",
    "lint": "prettier --list-different '**/*.sol' '**/*.ts' '**/*.json' && npm run solhint",
    "lint:fix": "prettier --write '**/*.sol' '**/*.ts' '**/*.json'",
    "solhint": "solhint **/*.sol -c .solhint.json",
    "test": "npx hardhat test"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.6",
    "@openzeppelin/contracts-upgradeable": "^4.9.6"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/node": "^20.12.7",
    "@verax-attestation-registry/verax-contracts": "^9.0.0",
    "@verax-attestation-registry/verax-sdk": "2.2.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.12.0",
    "hardhat": "^2.22.3",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.4",
    "viem": "^2.10.5"
  }
}
